<!--
下拉刷新函数形如：
onPullRefresh(stop) {
  return function() {
    setTimeout(() => {
      stop();
    }, 1000);
  };
}
原因是 wepy 传递 props 假如 不传递 会报错
-->
<template>
  <view id="qy-container">
    <view @touchstart="touchStart" @touchmove="touchMove" @touchend="touchEnd">
      <view style="transform: translateY({{shift}}px); transition: all {{isFirst ? 0 : .3}}s">
        <view class="loading" style="opacity: {{hasRefresh ? 1 : 0}}">
          <i class="weui-loading"></i>
        </view>
        <view>
          <slot name="qy-content"></slot>
        </view>
      </view>
    </view>
  </view>
</template>

<script>
import wepy from "wepy";

export default class extends wepy.component {
  data = {
    touchY: 0,
    shift: -24,
    ajaxEnd: true,
    moved: false,
    isTop: false,
    canRefresh: true,
    isFirst: true
  };
  props = {
    refreshFunction: {
      type: Function,
      default: function() {
        return null;
      }
    }
  };
  methods = {
    touchMove(e) {
      if (this.canRefresh && this.hasRefresh && this.ajaxEnd) {
        const currentTouchY = e.changedTouches[0]
          ? e.changedTouches[0].clientY
          : this.touchY;
        const differTouchY = currentTouchY - this.touchY;
        if (differTouchY > 10) {
          this.ajaxEnd = false;
          // 注册下拉事件
          this.moved = true;
          if (differTouchY < 100) {
            this.shift = differTouchY - 24;
          }
          this.refreshFunction(() => {
            this.ajaxEnd = true;
            this.shift = -24;
            this.$apply();
          });
        }
      }
    },
    touchStart(e) {
      this.isFirst = false;
      if (this.canRefresh && this.hasRefresh && this.ajaxEnd) {
        this.touchY = e.touches[0].clientY;
      }
    },
    touchEnd() {
      if (this.ajaxEnd) {
        this.closeLoading();
      } else {
        this.shift = 0;
      }
    },
    whenScroll(e) {
      this.canRefresh = e.detail.scrollTop === 0;
    }
  };
  computed = {
    hasRefresh() {
      return typeof this.refreshFunction === "function";
    }
  };
  closeLoading() {
    this.shift = -24;
  }
  onPageScroll(e) {}
}
</script>

<style lang="stylus" scoped>
vendors = official
#qy-container
  position relative
  top 66px
  left 0
  height calc(100vh - 42px)
  box-sizing border-box
