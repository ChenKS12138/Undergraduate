  <BaseContainer navTitle="等级考试">
    <view slot="qy-content">
      <view class="container">
        <view class="head">
          <image
            class="icon"
            src="https://static.airbob.org/under-graduate/grade/%E7%AD%89%E7%BA%A7.png"
            mode="widthFix"
          >
        </view>
        <repeat for="{{gradeExam}}" key="index" index="index" item="item">
          <GradeCard :result.sync="item" :show.sync="shows[index]"/>
        </repeat>
        <!-- <view class="foot">
          <text class="tips">没有查到考试成绩？试试</text>
          <button class="button-enter" hover-class="button-enter-en" @tap.stop="enter">手动输入准考证号&姓名</button>
        </view>-->
        <QyModal1>
          <view slot="content" class="enter-container">
            <view class="section1">
              <input
                placeholder="{{placeholderList[0]}}"
                type="number"
                class="input"
                placeholder-class="placeholder"
                @input="updateNumber"
              >
            </view>
            <view class="section2">
              <input
                placeholder="{{placeholderList[1]}}"
                class="input"
                placeholder-class="placeholder"
                @input="updateName"
              >
            </view>
            <button class="result-button" hover-class="result-button-enter" @tap.stop="checkResult">查询成绩</button>
            <text class="tips">目前仅支持CET46</text>
          </view>
        </QyModal1>
        <QyModal2 :closable.sync="close">
          <view slot="head" class="head-container">
            <image
              class="shadow shadow-left"
              src="https://static.airbob.org/under-graduate/grade/%E5%B7%A6%E9%98%B4%E5%BD%B1.png"
              mode="widthFix"
            >
            <view class="title-list">
              <text class="title-1">{{manualSearchResult.rank}}</text>
              <text class="title-2">考 试 成 绩</text>
            </view>
            <image
              class="shadow shadow-right"
              src="https://static.airbob.org/under-graduate/grade/%E5%8F%B3%E9%98%B4%E5%BD%B1.png"
              mode="widthFix"
            >
          </view>
          <view slot="content">
            <view class="result-container">
              <view class="result-list">
                <text>姓名:{{manualSearchResult.name}}</text>
                <text>准考证号：{{manualSearchResult.number}}</text>
                <text>考试级别：{{manualSearchResult.rank}}</text>
                <text>总分：{{manualSearchResult.total}}</text>
                <view>
                  <text>听力：{{manualSearchResult.listen}}</text>
                  <text>阅读：{{manualSearchResult.reading}}</text>
                </view>
                <text>翻译与写作：{{manualSearchResult.write}}</text>
                <text>口试准考证号：{{manualSearchResult.speakNumber}}</text>
                <text>口试等级：{{manualSearchResult.speakRank}}</text>
              </view>
            </view>
          </view>
        </QyModal2>
      </view>
    </view>
  </BaseContainer>
</template>

<script>
import wepy from "wepy";
import GradeCard from "../components/grade-card";
import QyModal from "../../components/qy-modal";
import { getUserGradeTest } from "@/api/education";
import { mockGetUserGradeTest } from "@/mock/education";
import JudgeStatus from "@/mixins/module";
import BaseContainer from "@/components/baseContainer";

export default class CheckGrade extends wepy.page {
  // todo 关闭Modal后清除data中的输入状态
  config = {
    backgroundColor: "#E5F4FB",
    navigationBarTitleText: "等级考试"
  };
  data = {
    gradeExam: [],
    shows: [],
    number: "",
    name: "",
    manualSearchResult: {
      name: "小程序",
      number: "1201201201023131",
      rank: "英语六级",
      total: 456,
      listen: 120,
      reading: 200,
      write: 136,
      speakNumber: "--",
      speakRank: "--"
    },
    close: true,
    placeholderList: ["", ""],
    visitorModeStatus: false
  };
  components = {
    GradeCard,
    QyModal1: QyModal,
    QyModal2: QyModal,
    BaseContainer
    // QyNav,
    // QyContainer
  };
  mixins = [JudgeStatus];
  events = {
    showGradeChange: index => {
      this.shows[index] = !this.shows[index];
    }
  };
  methods = {
    enter() {
      this.placeholderList = ["在此输入四六级准考证号", "在此输入姓名"];
      this.$invoke("QyModal1", "open");
    },
    updateName(e) {
      this.name = e.detail.value;
    },
    updateNumber(e) {
      this.number = e.detail.value;
    },
    checkResult() {
      // this.$invoke("QyModal1", "close");
      // this.$invoke("QyModal2", "open");
    }
  };
  onLoad(op) {
    this.visitorModeStatus = this.$com.BaseContainer.visitorModeStatus;
    this.judgeStatus(op.name).then(async () => {
      const res = !this.visitorModeStatus
        ? await getUserGradeTest()
        : await mockGetUserGradeTest();
      if (res.data) {
        const examData = res.data.data.gradeExam;
        this.shows = new Array(examData.length).fill(false);
        this.gradeExam = examData.map(item => {
          return {
            title: item.name,
            year: item.year,
            term: item.term,
            number: item.certno,
            result: item.score
          };
        });
      }
      this.$apply();
    });
  }
}
</script>

